<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dom.heaman.StatusFragment">

    <!-- TODO: Update blank fragment layout -->


    <!--<com.github.mikephil.charting.charts.PieChart-->
    <!--android:id="@+id/chart1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="20dp"-->
    <!--/>-->

    <TextView
        android:id="@+id/Numstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Status"
        android:textColor="#ffffff"
        android:textSize="70dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/percentstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Numstatus"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="100%"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/listitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentstatus"
        android:layout_margin="10dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnScan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/roundbutton"
            android:text="Scan"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                                                              " />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/btnScan"
            android:background="@drawable/roundbutton"
            android:text="ThÃªm"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</RelativeLayout>